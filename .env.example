# Variáveis para o funcionamento dos bancos de dados
DATABASE_URL="mysql://root:mariadb@maria-db-api-letmeask:3306/database?schema=public" # URL de conexão com o mysql
DATABASE_NOSQL_URL="mongodb://mongo-db-api-letmeask:27017" # URL de conexão com o mongodb

# O cors só aceitará requisições dessa url se a variável ENVIRONMENT não estiver definida como TEST
APP_URL="http://localhost:5173" # URL do Front-end

# Variáveis para o funcionamento do módulo de json web token
JWT_KEY="secret-key" # É a secret-key de hash do json web token

# Porta de abertura do servidor
PORT=3333

# Se essa variável estiver definida como TEST o cors aceitará requisições de qualquer origem
ENVIRONMENT="TEST"

# Variáveis para o funcionamento do provedor de fila
QUEUE_HOST="amqp://admin:admin@queue-api-letmeask:5672"
QUEUE_NAME="queue"

# Variável que aumenta memória máxima do Node, utilizada para evitar vazamento de memória
NODE_OPTIONS="--max-old-space-size=8192"

# Variável será usada para validar se o host utilizado em combinação com o user-agent pode fazer requisições para a aplicação
API_HOST=true

# Variável será usada para validar se o user-agent utilizado em combinação com o host pode fazer requisições para a aplicação
PROMETHEUS_USER_AGENT=true